#!/bin/bash

set -e

export IMAGE_NAME=ruby-vips-lambda
export VIPS_VERSION=${VIPS_VERSION:=8.9.2}

rm -rf ./share
mkdir ./share

docker build \
  --no-cache \
  --build-arg VIPS_VERSION=${VIPS_VERSION} \
  --tag $IMAGE_NAME \
  .

docker run \
  --rm \
  --volume "${PWD}/share:/share" \
  "${IMAGE_NAME}:latest" \
  sh -c "cp -r /build/share/* /share"
